<MyRoot>:
    random_label: random_label
    GridLayout:
        rows: 3
        cols: 2
        padding: 10
        spacing: 10
        Label:
            text: "Rock, Paper, Well, Scissors"
            font_size: 32
            color: 0.92, 0.45, 0
        Label:
            id: random_label
            text: "-"
            font_size: 32
        Button:
            background_color: 0.92, 0.12, 0.23
            text: "Rock"
            font_size: 16
            on_press: root.generate_number()
        Button:
            background_color: 0.07, 0.40, 0.80
            text: "Paper"
            font_size: 16
            on_press: root.generate_number()
        Button:
            background_color: 1, 0.86, 0.2
            text: "Well"
            font_size: 16
            on_press: root.generate_number()
        Button:
            background_color: 0.14, 0.53, 0.04
            text: "Scissors"
            font_size: 16
            on_press: root.generate_number()